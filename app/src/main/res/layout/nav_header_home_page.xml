<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/side_nav_bar"
    android:orientation="vertical"
    android:paddingBottom="0dp"
    android:paddingLeft="20dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:weightSum="3"
    android:gravity="bottom">

    <ImageView
        android:id="@+id/drawer_display_image"
        android:paddingTop="0dp"
        app:srcCompat="@drawable/ic_avatar_drawer"
        android:layout_weight="0.26"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_x="6dp"
        android:layout_y="2dp"
        android:layout_height="60dp"
        android:layout_width="60dp" />

    <TextView
        android:id="@+id/drawer_display_name"
        android:layout_width="match_parent"
        android:layout_below="@id/drawer_display_image"
        android:paddingTop="0dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_alignParentStart="true"
        android:layout_x="18dp"
        android:layout_y="91dp"
        android:layout_height="35dp" />

    <TextView
        android:id="@+id/drawer_display_email"
        android:layout_width="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@id/drawer_display_name"
        android:layout_x="0dp"
        android:layout_y="0dp"
        android:layout_marginTop="0dp"
        android:layout_height="35dp" />

</LinearLayout>
