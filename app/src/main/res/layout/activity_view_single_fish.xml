<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_view_single_fish"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="carnetdepeche.istic.com.carnetdepeche.ViewSingleFish">

    <View
        android:id="@+id/view_single_place_header"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@mipmap/header_blank_addfish"></View>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/view_single_place_header"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:id="@+id/view_single_fish_specie"
        android:layout_alignParentEnd="true"
        android:textStyle="normal|bold"
        android:focusable="false"
        android:focusableInTouchMode="false" />

    <TextView
        android:text="Coin :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_centerVertical="true"
        android:id="@+id/view_single_fish_coin"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView5"
        android:layout_marginLeft="10dp"
        android:focusable="false"
        android:focusableInTouchMode="false" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/view_single_fish_poids"
        android:layout_below="@+id/view_single_fish_coin"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView5"
        android:layout_marginLeft="10dp"
        android:focusable="false"
        android:focusableInTouchMode="false" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/view_single_fish_taille"
        android:layout_below="@+id/view_single_fish_poids"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/view_single_fish_poids"
        android:focusable="false"
        android:focusableInTouchMode="false" />

    <TextView
        android:text="Taille :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_alignBaseline="@+id/view_single_fish_taille"
        android:layout_alignBottom="@+id/view_single_fish_taille"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Poids :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_alignBaseline="@+id/view_single_fish_poids"
        android:layout_alignBottom="@+id/view_single_fish_poids"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Commentaires :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:layout_below="@+id/view_single_fish_taille"
        android:layout_alignParentStart="true"
        android:layout_marginTop="19dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/view_single_fish_commentaires"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView6"
        android:focusable="false"
        android:focusableInTouchMode="false" />

</RelativeLayout>
