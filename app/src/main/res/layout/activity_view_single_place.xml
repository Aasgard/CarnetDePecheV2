<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_view_single_place"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="carnetdepeche.istic.com.carnetdepeche.ViewSinglePlace">

    <View
        android:id="@+id/view_single_place_header"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@mipmap/header_blank_addplace"></View>

    <TextView
        android:text="Latitude :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_below="@+id/view_single_place_name"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp" />

    <TextView
        android:text="Longitude :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="14dp"
        android:id="@+id/view_single_place_longitude"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/view_single_place_commentaires"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_alignStart="@+id/view_single_place_latitude" />

    <TextView
        android:text="Commentaires :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editext"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/view_single_place_longitude"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="12dp"
        android:id="@+id/view_single_place_name"
        android:textStyle="normal|bold"
        android:editable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_below="@+id/view_single_place_header"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/view_single_place_latitude"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignParentEnd="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_toEndOf="@+id/editext" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:layout_below="@+id/editext"
        android:layout_alignParentStart="true"
        android:id="@+id/view_single_place_commentaires"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:focusable="false"
        android:focusableInTouchMode="false" />

</RelativeLayout>
